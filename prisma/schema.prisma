  minimum_nights         Int?         @default(1)           // Duplicate of minNights
  maximum_nights         Int?         @default(365)         // Duplicate of maxNights
  check_in_time          String?      @default("15:00")     // Duplicate of checkInTime
  check_out_time         String?      @default("11:00")     // Duplicate of checkOutTime
  allow_pets             Boolean?     @default(false)       // Duplicate of allowPets
  allow_smoking          Boolean?     @default(false)       // Duplicate of allowSmoking
  allow_parties          Boolean?     @default(false)       // Duplicate of allowEvents
  quiet_hours_start      String?      @default("22:00")
  quiet_hours_end        String?      @default("08:00")
  minimum_advance_notice Int?         @default(1)
  preparation_time       Int?         @default(1)
  total_bookings         Int?         @default(0)           // Duplicate of bookingCount
  total_reviews          Int?         @default(0)
  total_earnings         Float?       @default(0)
  views_count            Int?         @default(0)           // Duplicate of viewCount

