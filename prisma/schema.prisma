// ============================================================================
// BOOKING MODEL
// ============================================================================

model Booking {
  id              String         @id @default(cuid())
  propertyId      String
  guestId         String
  hostId          String         // Denormalized for performance

  // Dates
  checkIn         DateTime
  checkOut        DateTime
  numberOfNights  Int

  // Guests
  guests          Int
  adults          Int
  children        Int            @default(0)
  infants         Int            @default(0)

  // Pricing
  nightlyRate     Float
  subtotal        Float
  cleaningFee     Float          @default(0)
  serviceFee      Float          @default(0)
  taxAmount       Float          @default(0)
  totalPrice      Float
  amountPaid      Float          @default(0) // Track partial payments (50/50 split)

  // Platform Commission
  platformCommission Float
  hostEarnings    Float

  // Status
  status          String         @default("PENDING") // lookup: booking_status
  paymentStatus   String         @default("PENDING") // lookup: payment_status
  paymentMethod   String?
  transactionId   String?

  // Guest Details
  specialRequests String?        @db.Text
  arrivalTime     String?

  // Timestamps
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  confirmedAt     DateTime?
  cancelledAt     DateTime?
  completedAt     DateTime?
  deletedAt       DateTime?

  // Cancellation
  cancelledBy     String?        // USER or HOST or ADMIN
  cancellationReason String?

  // Refund tracking
  refundAmount    Float?
  refundedAt      DateTime?
  refundReason    String?        @db.Text

  // Hold expiry and payment tracking
  holdExpiresAt   DateTime?      // Auto-expire if payment not received
  approvedAt      DateTime?      // When host approved
  paymentIntentId String?        // Stripe payment intent ID
  paymentCapturedAt DateTime?    // When payment was captured

  // Cancellation policy
  cancellationPolicyType String? @default("FLEXIBLE") // FLEXIBLE, MODERATE, STRICT
  cancellationDeadline   DateTime? // Deadline for full/partial refund

  // RELATIONS
  property        Property       @relation("PropertyBookings", fields: [propertyId], references: [id], onDelete: Cascade)
  guest           User           @relation("GuestBookings", fields: [guestId], references: [id], onDelete: Cascade)
  host            User           @relation("HostBookings", fields: [hostId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([guestId])
  @@index([hostId])
  @@index([status])
  @@index([holdExpiresAt])
  @@index([paymentStatus])
  @@map("bookings")
}

